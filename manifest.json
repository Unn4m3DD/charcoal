{
  "manifest_version": 2,
  "name": "Charcoal Messenger",
  "version": "0.1",
  "browser_action": {
    "default_popup": "settings.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.messenger.com/*"],
      "css": ["stylesheet.css"],
      "js": ["mode.js", "init.js"]
    }
  ],
  "permissions": ["storage"],
  "web_accessible_resources": [
    "stylesheet.css",
    "charcoal-messenger.svg",
    "facebook-messenger.svg"
  ]
}